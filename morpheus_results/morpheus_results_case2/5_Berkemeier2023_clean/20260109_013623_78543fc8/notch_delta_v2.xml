<?xml version='1.0' encoding='UTF-8'?>
<MorpheusModel version="4">
    <Description>
        <Title>Notch-Delta Lateral Inhibition - Berkemeier 2023</Title>
        <Details>Epsilon-Collier model of 2D Notch-Delta signalling on hexagonal lattices. Parameters: h=k=6, a=10^8, b=10^2, nu=1</Details>
    </Description>
    
    <Space>
        <Lattice class="hexagonal">
            <Size symbol="size" value="14, 14, 0"/>
            <BoundaryConditions>
                <Condition boundary="x" type="periodic"/>
                <Condition boundary="y" type="periodic"/>
            </BoundaryConditions>
            <Neighborhood>
                <Order>1</Order>
            </Neighborhood>
        </Lattice>
        <SpaceSymbol symbol="space"/>
    </Space>
    
    <Time>
        <StartTime value="0"/>
        <StopTime value="50"/>
        <TimeSymbol symbol="time"/>
        <RandomSeed value="1"/>
    </Time>
    
    <CellTypes>
        <CellType class="medium" name="medium"/>
        
        <CellType class="biological" name="cell">
            <Property symbol="n" value="0.744" name="Notch activity"/>
            <Property symbol="d" value="0.055" name="Delta activity"/>
            <Property symbol="d_avg" value="0.055" name="Average neighbor Delta"/>
            
            <System solver="Runge-Kutta [fixed, O(4)]" time-step="0.1">
                <Constant symbol="h" value="6" name="Hill coefficient"/>
                <Constant symbol="k" value="6" name="Hill coefficient"/>
                <Constant symbol="a" value="1e8" name="Trans-activation"/>
                <Constant symbol="b" value="100" name="Ligand inhibition"/>
                <Constant symbol="nu" value="1.0" name="Decay ratio"/>
                
                <!-- Notch: dn/dt = f(<d>) - n where f(x) = x^k/(a + x^k) -->
                <DiffEqn symbol-ref="n">
                    <Expression>(d_avg^k) / (a + d_avg^k) - n</Expression>
                </DiffEqn>
                
                <!-- Delta: dd/dt = nu*(g(n) - d) where g(x) = 1/(1 + b*x^h) -->
                <DiffEqn symbol-ref="d">
                    <Expression>nu * (1 / (1 + b * n^h) - d)</Expression>
                </DiffEqn>
            </s>
            
            <NeighborhoodReporter>
                <Input scaling="cell" value="d"/>
                <Output symbol-ref="d_avg" mapping="average"/>
            </NeighborhoodReporter>
        </CellType>
    </CellTypes>
    
    <CellPopulations>
        <Population size="0" type="cell">
            <InitCellLattice/>
            <InitProperty symbol-ref="n">
                <Expression>rand_norm(0.744, 0.01)</Expression>
            </InitProperty>
            <InitProperty symbol-ref="d">
                <Expression>rand_norm(0.055, 0.01)</Expression>
            </InitProperty>
        </Population>
    </CellPopulations>
    
    <Analysis>
        <Gnuplotter time-step="1.0" decorate="false">
            <Terminal name="png" size="600,600,0"/>
            <Plot title="Delta Pattern (white=SOP cells)">
                <Cells value="d" min="0.0" max="1.0">
                    <ColorMap>
                        <Color value="1.0" color="white"/>
                        <Color value="0.5" color="yellow"/>
                        <Color value="0.0" color="green"/>
                    </ColorMap>
                </Cells>
            </Plot>
            <Plot title="Notch Pattern (red=high)">
                <Cells value="n" min="0.0" max="1.0">
                    <ColorMap>
                        <Color value="1.0" color="red"/>
                        <Color value="0.5" color="yellow"/>
                        <Color value="0.0" color="blue"/>
                    </ColorMap>
                </Cells>
            </Plot>
        </Gnuplotter>
        
        <Logger time-step="1.0">
            <Input>
                <Symbol symbol-ref="time"/>
                <Symbol symbol-ref="n"/>
                <Symbol symbol-ref="d"/>
            </Input>
            <o>
                <TextOutput file-format="csv"/>
            </o>
        </Logger>
        
        <ModelGraph format="svg" include-tags="#untagged" reduced="true"/>
    </Analysis>
</MorpheusModel>