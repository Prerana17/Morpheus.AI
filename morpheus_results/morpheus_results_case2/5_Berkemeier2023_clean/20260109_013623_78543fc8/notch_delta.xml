<?xml version='1.0' encoding='UTF-8'?>
<MorpheusModel version="4">
    <Description>
        <Title>Notch-Delta Lateral Inhibition (Berkemeier & Page 2023)</Title>
        <Details>Implementation of the epsilon-Collier model: Coupling dynamics of 2D Notch-Delta signalling on hexagonal lattices.
        
Reference: Berkemeier F, Page KM (2023) Mathematical Biosciences 360:109012
Parameters from Table 1 (Supplementary): h=k=6, a=10^8, b=10^2, ν=1</Details>
    </Description>
    
    <Space>
        <Lattice class="hexagonal">
            <Size symbol="size" value="14, 14, 0"/>
            <BoundaryConditions>
                <Condition boundary="x" type="periodic"/>
                <Condition boundary="y" type="periodic"/>
            </BoundaryConditions>
            <Neighborhood>
                <Order>1</Order>
            </Neighborhood>
        </Lattice>
        <SpaceSymbol symbol="space"/>
    </Space>
    
    <Time>
        <StartTime value="0"/>
        <StopTime value="50"/>
        <TimeSymbol symbol="time"/>
        <RandomSeed value="1"/>
    </Time>
    
    <CellTypes>
        <CellType class="medium" name="medium"/>
        
        <CellType class="biological" name="cell">
            <Property symbol="n" value="0.744" name="Notch activity"/>
            <Property symbol="d" value="0.055" name="Delta activity"/>
            <Property symbol="d_avg" value="0.055" name="Average neighbor Delta"/>
            
            <System solver="Runge-Kutta [fixed, O(4)]" time-step="0.1">
                <!-- Parameters from Berkemeier & Page 2023, Table S1 -->
                <Constant symbol="h" value="6" name="Hill coefficient for g(n)"/>
                <Constant symbol="k" value="6" name="Hill coefficient for f(d)"/>
                <Constant symbol="a" value="1e8" name="Trans-activation parameter"/>
                <Constant symbol="b" value="100" name="Ligand inhibition parameter"/>
                <Constant symbol="nu" value="1.0" name="Decay rate ratio"/>
                
                <!-- Notch dynamics: dn/dt = f(<d>) - n -->
                <!-- f(x) = x^k / (a + x^k) -->
                <DiffEqn symbol-ref="n">
                    <Expression>(d_avg^k) / (a + d_avg^k) - n</Expression>
                </DiffEqn>
                
                <!-- Delta dynamics: dd/dt = ν(g(n) - d) -->
                <!-- g(x) = 1 / (1 + b*x^h) -->
                <DiffEqn symbol-ref="d">
                    <Expression>nu * (1 / (1 + b * n^h) - d)</Expression>
                </DiffEqn>
            </s>
            
            <!-- Get average Delta from neighbors -->
            <NeighborhoodReporter>
                <Input scaling="cell" value="d"/>
                <Output symbol-ref="d_avg" mapping="average"/>
            </NeighborhoodReporter>
        </CellType>
    </CellTypes>
    
    <CellPopulations>
        <Population size="0" type="cell">
            <InitCellLattice/>
            <!-- Initialize near homogeneous steady state with small noise -->
            <InitProperty symbol-ref="n">
                <Expression>rand_norm(0.744, 0.01)</Expression>
            </InitProperty>
            <InitProperty symbol-ref="d">
                <Expression>rand_norm(0.055, 0.01)</Expression>
            </InitProperty>
        </Population>
    </CellPopulations>
    
    <Analysis>
        <Gnuplotter time-step="1.0" decorate="false">
            <Terminal name="png" size="600,600,0"/>
            <Plot title="Notch-Delta Pattern (Delta levels)">
                <Cells value="d" min="0.0" max="1.0">
                    <ColorMap>
                        <Color value="1.0" color="white" name="High Delta (SOP)"/>
                        <Color value="0.5" color="yellow"/>
                        <Color value="0.0" color="green" name="Low Delta (non-SOP)"/>
                    </ColorMap>
                </Cells>
            </Plot>
            <Plot title="Notch-Delta Pattern (Notch levels)">
                <Cells value="n" min="0.0" max="1.0">
                    <ColorMap>
                        <Color value="1.0" color="red" name="High Notch"/>
                        <Color value="0.5" color="yellow"/>
                        <Color value="0.0" color="blue" name="Low Notch"/>
                    </ColorMap>
                </Cells>
            </Plot>
        </Gnuplotter>
        
        <Logger time-step="1.0">
            <Input>
                <Symbol symbol-ref="time"/>
                <Symbol symbol-ref="n"/>
                <Symbol symbol-ref="d"/>
            </Input>
            <o>
                <TextOutput file-format="csv"/>
            </o>
        </Logger>
        
        <ModelGraph format="svg" include-tags="#untagged" reduced="true"/>
    </Analysis>
</MorpheusModel>