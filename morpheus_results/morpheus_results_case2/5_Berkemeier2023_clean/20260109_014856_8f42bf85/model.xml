<MorpheusModel version="4">
    <Description>
        <Title>Epsilon-Collier Model</Title>
        <Details>Berkemeier Page 2023 Mathematical Biosciences 360</Details>
    </Description>
    <Global>
        <Constant symbol="epsilon" value="0.2"/>
        <Constant symbol="a" value="1e-8"/>
        <Constant symbol="b" value="100"/>
        <Constant symbol="h" value="6"/>
        <Constant symbol="k" value="6"/>
        <Constant symbol="nu" value="1.0"/>
    </Global>
    <Space>
        <Lattice class="hexagonal">
            <Size value="14 14 0"/>
            <BoundaryConditions>
                <Condition boundary="x" type="periodic"/>
                <Condition boundary="y" type="periodic"/>
            </BoundaryConditions>
        </Lattice>
    </Space>
    <Time>
        <StartTime value="0"/>
        <StopTime value="50"/>
        <RandomSeed value="42"/>
    </Time>
    <CellTypes>
        <CellType class="biological" name="cells">
            <Property symbol="n" value="0.744" name="Notch"/>
            <Property symbol="d" value="0.055" name="Delta"/>
            <Property symbol="d_neighbors" value="0.055" name="Delta-Neighbors"/>
            <Property symbol="d_second_neighbors" value="0.055" name="Delta-SecondNeighbors"/>
            <Property symbol="d_avg" value="0.055" name="Delta-Avg"/>
            <System solver="runge-kutta" time-step="0.01">
                <DiffEqn symbol-ref="n">
                    <Expression>(d_avg^k) / (a + d_avg^k) - n</Expression>
                </DiffEqn>
                <DiffEqn symbol-ref="d">
                    <Expression>nu * (1.0 / (1.0 + b * n^h) - d)</Expression>
                </DiffEqn>
                <Rule symbol-ref="d_avg">
                    <Expression>(1.0 - epsilon) * d_neighbors + epsilon * d_second_neighbors</Expression>
                </Rule>
            </s>
            <NeighborhoodReporter>
                <Input scaling="cell" value="d"/>
                <Output symbol-ref="d_neighbors" mapping="average"/>
                <Neighborhood>
                    <Order>1</Order>
                </Neighborhood>
            </NeighborhoodReporter>
            <NeighborhoodReporter>
                <Input scaling="cell" value="d"/>
                <Output symbol-ref="d_second_neighbors" mapping="average"/>
                <Neighborhood>
                    <Order>2</Order>
                </Neighborhood>
            </NeighborhoodReporter>
        </CellType>
        <CellType class="medium" name="medium">
            <Property symbol="d" value="0.0" name="Delta"/>
        </CellType>
    </CellTypes>
    <CellPopulations>
        <Population size="0" type="cells">
            <InitCellLattice/>
            <InitProperty symbol-ref="n">
                <Expression>0.744 + rand_uni(0,0.01)</Expression>
            </InitProperty>
            <InitProperty symbol-ref="d">
                <Expression>0.055 + rand_uni(0,0.01)</Expression>
            </InitProperty>
        </Population>
    </CellPopulations>
    <Analysis>
        <Gnuplotter time-step="2.5">
            <Terminal name="png"/>
            <Plot>
                <Cells value="d" min="0.0" max="1">
                    <ColorMap>
                        <Color value="0.0" color="green"/>
                        <Color value="0.5" color="yellow"/>
                        <Color value="1" color="white"/>
                    </ColorMap>
                </Cells>
            </Plot>
        </Gnuplotter>
        <Logger time-step="0.5">
            <Input>
                <Cell mapping="all" celltype="cells"/>
            </Input>
        </Logger>
    </Analysis>
</MorpheusModel>