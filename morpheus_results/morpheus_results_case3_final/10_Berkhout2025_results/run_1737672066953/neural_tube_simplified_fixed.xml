<![CDATA[<?xml version='1.0' encoding='UTF-8'?>
<MorpheusModel version="4">
    <Description>
        <Title>Neural Tube Closure Model - Simplified</Title>
        <Details>
            Simplified agent-based model of neural tube closure based on Berkhout et al. 2025.
            Models apical constriction and convergent extension driving neural tube morphogenesis.
        </Details>
    </Description>
    
    <Global>
        <Constant symbol="apical_constriction_rate" value="0.002"/>
        <Variable symbol="avg_constriction" value="0.0"/>
    </Global>
    
    <Space>
        <SpaceSymbol symbol="space"/>
        <Lattice class="square">
            <Size symbol="size" value="200, 150, 0"/>
            <BoundaryConditions>
                <Condition boundary="x" type="periodic"/>
                <Condition boundary="y" type="periodic"/>
            </BoundaryConditions>
            <Neighborhood>
                <Order>2</Order>
            </Neighborhood>
        </Lattice>
    </Space>
    
    <Time>
        <StartTime value="0"/>
        <StopTime value="2000"/>
        <TimeSymbol symbol="time"/>
        <RandomSeed value="42"/>
    </Time>
    
    <CellTypes>
        <CellType name="neural_epithelium" class="biological">
            <Property symbol="constriction" value="0.0"/>
            <VolumeConstraint target="200" strength="1"/>
            <SurfaceConstraint target="0.9" strength="0.5" mode="aspherity"/>
            <System solver="Euler [fixed, O(1)]" time-step="10">
                <Rule symbol-ref="constriction">
                    <Expression>if(constriction &lt; 1.0, constriction + apical_constriction_rate, 1.0)</Expression>
                </Rule>
            </System>
            <Mapper name="Average constriction">
                <Input value="constriction"/>
                <Output symbol-ref="avg_constriction" mapping="average"/>
            </Mapper>
        </CellType>
        
        <CellType name="mesenchyme" class="biological">
            <VolumeConstraint target="180" strength="1"/>
            <SurfaceConstraint target="0.9" strength="0.3" mode="aspherity"/>
        </CellType>
        
        <CellType name="medium" class="medium"/>
    </CellTypes>
    
    <CPM>
        <Interaction default="0">
            <Contact type1="neural_epithelium" type2="neural_epithelium" value="2"/>
            <Contact type1="neural_epithelium" type2="medium" value="16"/>
            <Contact type1="neural_epithelium" type2="mesenchyme" value="6"/>
            <Contact type1="mesenchyme" type2="mesenchyme" value="5"/>
            <Contact type1="mesenchyme" type2="medium" value="12"/>
        </Interaction>
        
        <MonteCarloSampler stepper="edgelist">
            <MCSDuration value="1"/>
            <Neighborhood>
                <Order>2</Order>
            </Neighborhood>
            <MetropolisKinetics temperature="5"/>
        </MonteCarloSampler>
        
        <ShapeSurface scaling="norm">
            <Neighborhood>
                <Order>6</Order>
            </Neighborhood>
        </ShapeSurface>
    </CPM>
    
    <CellPopulations>
        <Population size="0" type="neural_epithelium">
            <InitCircle mode="random" number-of-cells="20">
                <Dimensions radius="40" center="100, 75, 0"/>
            </InitCircle>
        </Population>
        
        <Population size="0" type="mesenchyme">
            <InitCircle mode="random" number-of-cells="25">
                <Dimensions radius="60" center="100, 75, 0"/>
            </InitCircle>
        </Population>
    </CellPopulations>
    
    <Analysis>
        <Gnuplotter time-step="100" decorate="false">
            <Terminal name="png"/>
            <Plot title="Cell Types">
                <Cells flooding="true" value="cell.type"/>
            </Plot>
            <Plot title="Apical Constriction">
                <Cells flooding="true" value="constriction" min="0" max="1">
                    <ColorMap>
                        <Color value="1" color="red"/>
                        <Color value="0.5" color="yellow"/>
                        <Color value="0" color="blue"/>
                    </ColorMap>
                </Cells>
            </Plot>
        </Gnuplotter>
        
        <Logger time-step="50">
            <Input>
                <Symbol symbol-ref="celltype.neural_epithelium.size"/>
                <Symbol symbol-ref="celltype.mesenchyme.size"/>
                <Symbol symbol-ref="avg_constriction"/>
            </Input>
            <Output>
                <TextOutput/>
            </Output>
            <Plots>
                <Plot time-step="500" title="Cell Populations">
                    <Style style="linespoints"/>
                    <Terminal terminal="png"/>
                    <X-axis>
                        <Symbol symbol-ref="time"/>
                    </X-axis>
                    <Y-axis>
                        <Symbol symbol-ref="celltype.neural_epithelium.size"/>
                        <Symbol symbol-ref="celltype.mesenchyme.size"/>
                    </Y-axis>
                </Plot>
                <Plot time-step="500" title="Constriction Dynamics">
                    <Style style="linespoints"/>
                    <Terminal terminal="png"/>
                    <X-axis>
                        <Symbol symbol-ref="time"/>
                    </X-axis>
                    <Y-axis>
                        <Symbol symbol-ref="avg_constriction"/>
                    </Y-axis>
                </Plot>
            </Plots>
        </Logger>
        
        <ModelGraph format="svg" reduced="false" include-tags="#untagged"/>
    </Analysis>
</MorpheusModel>]]>