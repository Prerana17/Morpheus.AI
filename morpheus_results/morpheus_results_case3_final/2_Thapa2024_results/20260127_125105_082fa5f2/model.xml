<?xml version='1.0' encoding='UTF-8'?>
<MorpheusModel version="4">
    <Description>
        <Title>Neural Tube Model</Title>
    </Description>
    <Global>
        <Variable symbol="avg_constriction" value="0.0"/>
    </Global>
    <Space>
        <SpaceSymbol symbol="l"/>
        <Lattice class="square">
            <Size symbol="size" value="200, 200, 0"/>
            <BoundaryConditions>
                <Condition boundary="x" type="periodic"/>
                <Condition boundary="y" type="periodic"/>
            </BoundaryConditions>
            <Neighborhood>
                <Order>2</Order>
            </Neighborhood>
        </Lattice>
    </Space>
    <Time>
        <StartTime value="0"/>
        <StopTime value="500"/>
        <RandomSeed value="0"/>
        <TimeSymbol symbol="time"/>
    </Time>
    <CellTypes>
        <CellType class="biological" name="neural">
            <Property symbol="constriction" value="0.0"/>
            <VolumeConstraint target="200" strength="1"/>
            <Mapper>
                <Input value="constriction"/>
                <Output symbol-ref="avg_constriction" mapping="average"/>
            </Mapper>
        </CellType>
        <CellType class="biological" name="mesenchyme">
            <VolumeConstraint target="200" strength="1"/>
        </CellType>
        <CellType class="medium" name="medium"/>
    </CellTypes>
    <CPM>
        <Interaction default="0.0">
            <Contact type1="neural" type2="medium" value="12"/>
            <Contact type1="mesenchyme" type2="medium" value="6"/>
            <Contact type1="neural" type2="neural" value="6"/>
            <Contact type1="mesenchyme" type2="mesenchyme" value="6"/>
            <Contact type1="neural" type2="mesenchyme" value="16"/>
        </Interaction>
        <MonteCarloSampler stepper="edgelist">
            <MCSDuration value="1"/>
            <Neighborhood>
                <Order>2</Order>
            </Neighborhood>
            <MetropolisKinetics temperature="2"/>
        </MonteCarloSampler>
        <ShapeSurface scaling="norm">
            <Neighborhood>
                <Order>6</Order>
            </Neighborhood>
        </ShapeSurface>
    </CPM>
    <CellPopulations>
        <Population size="0" type="neural">
            <InitCircle mode="random" number-of-cells="30">
                <Dimensions radius="size.x/3" center="size.x/2, size.y/2, 0"/>
            </InitCircle>
        </Population>
        <Population size="0" type="mesenchyme">
            <InitCircle mode="random" number-of-cells="30">
                <Dimensions radius="size.x/3" center="size.x/2, size.y/2, 0"/>
            </InitCircle>
        </Population>
    </CellPopulations>
    <Analysis>
        <Gnuplotter time-step="100" decorate="false">
            <Terminal name="png"/>
            <Plot>
                <Cells flooding="true" value="cell.type"/>
            </Plot>
        </Gnuplotter>
        <Logger time-step="10.0">
            <Input>
                <Symbol symbol-ref="celltype.neural.size"/>
                <Symbol symbol-ref="celltype.mesenchyme.size"/>
            </Input>
            <o>
                <TextOutput/>
            </o>
            <Plots>
                <Plot time-step="100">
                    <Style style="linespoints"/>
                    <Terminal terminal="png"/>
                    <X-axis>
                        <Symbol symbol-ref="time"/>
                    </X-axis>
                    <Y-axis>
                        <Symbol symbol-ref="celltype.neural.size"/>
                    </Y-axis>
                </Plot>
            </Plots>
        </Logger>
    </Analysis>
</MorpheusModel>